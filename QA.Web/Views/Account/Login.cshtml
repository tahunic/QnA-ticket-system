@model QA.Web.ViewModels.AccountVM
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/registerLogin.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <a href="#" class="active" id="login-form-link">Login</a>
                            </div>
                            <div class="col-xs-6">
                                <a href="#" id="register-form-link">Register</a>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @using (Html.BeginForm("TryLogin", "Account", FormMethod.Post, new { id = "login-form" }))
                                {
                                    @ViewBag.Error
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Account.Username, new { @class = "form-control", tabindex = "1", placeholder = "Username" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(x => x.Account.Password, new { @class = "form-control", tabindex = "2", placeholder = "Password" })
                                    </div>

                                    <div class="form-group text-center">
                                        <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                        <label for="remember"> Remember Me</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="text-center">
                                                    <a href="~/account/forgotpassword" tabindex="5" class="forgot-password">Forgot Password?</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }


                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "register-form", style = "display:none" }))
                                {
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Register.Fname, new { tabindex = "1", @class = "form-control", placeholder = "First name", required = "true" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Register.Lname, new { tabindex = "1", @class = "form-control", placeholder = "Last name", required = "true" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Register.Username, new { tabindex = "1", @class = "form-control", placeholder = "Username", required = "true" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Register.Email, new { tabindex = "1", @class = "form-control", placeholder = "Email", required = "true", type = "Email" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(x => x.Register.Password, new { tabindex = "2", @class = "form-control", placeholder = "Password", required = "true" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(x => x.Register.PasswordConfirm, new { tabindex = "2", @class = "form-control", placeholder = "Confirm Password", required = "true" })
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    $(function () {

        $('#login-form-link').click(function (e) {
            $("#login-form").delay(100).fadeIn(100);
            $("#register-form").fadeOut(100);
            $('#register-form-link').removeClass('active');
            $(this).addClass('active');
            e.preventDefault();
        });
        $('#register-form-link').click(function (e) {
            $("#register-form").delay(100).fadeIn(100);
            $("#login-form").fadeOut(100);
            $('#login-form-link').removeClass('active');
            $(this).addClass('active');
            e.preventDefault();
        });

    });

    //$('form').validate();
</script>