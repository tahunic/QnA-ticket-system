@model QA.Web.ViewModels.QuestionEditVM
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Question", FormMethod.Post, null))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(q => q.Id);

    <div class="form-group">
        <label>Title: </label>
        @Html.TextBoxFor(q => q.Title, new { @class = "form-control required", placeholder = "Title" })
    </div>

    <div class="form-group">
        <label>Content: </label>
        @Html.TextBoxFor(q => q.Content, new { @class = "form-control required", placeholder = "Content" })
    </div>

    <div class="form-group">
        <label>Subject: </label>
        @Html.DropDownListFor(q => q.SubjectId, Model.Subject, new { @class = "form-control required", placeholder = "Subject" })
    </div>

    <div class="form-group">
        <label>Public: </label>
        @Html.CheckBoxFor(q => q.IsPublic, new { @class = "form-control" })
    </div>

    <input type="submit" name="name" value="Send" class="btn btn-default" />
}
